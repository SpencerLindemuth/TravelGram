<div id="userbackground">
<div id="userbody">
<div class="grid-container">
  <div class="grid-item1" id="userinfo">
    <h1><%= @user.username %></h1><br>
    <h3>📍<%= @user.home_city.titleize %></h3>
    <h4 id="userbio"><%= @user.bio %></h4>
    <br>
    <h5>Total Posts: <%=@post_count%></h5>
    <h5>Total Likes: <%=@likes%></h5>
    <br>
    <h5><%=@user.username%> has been to <%=@location_count%> locations</h5>
    <h5>and <%=@city_count%> different cities</h5>
    <div class="buttons">
    <% if @user.id == session[:user_id] %>
    <div class="button">
      <%= button_to "Edit Profile", {:controller => :users,
      :action => 'edit', :id => @user.id}, :method => :get, :class => "inputbutton" %>
    </div>
    <div class="button">
      <%= button_to "Delete", {:controller => :users,
      :action => 'destroy', :id => @user.id}, :method => :delete, :class => "inputbutton", data: { confirm: 'Are you sure you want to leave us?' } %>
    </div>
    <%end%>
    </div>
  </div>

  <div class="grid-item2">
    <% @posts.each do |post| %>
      <div class="posts">
      <%=link_to image_tag(url_for(post.avatar),:class=>"image"), post_path(post) %><br>
      <div class="container">
        <div class="item1"><h4><%= post.caption %> &nbsp📍<%=link_to post.location.city.name.titleize, city_path(post.location.city)%></h4></div>
        <div class="item2"><h4>❤️ <%= post.likes.count %></h4></div>
      </div>
      </div>
    <% end %>
  </div>
</div>
</div>
</div>

