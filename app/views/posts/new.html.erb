<div class="newbackground">
    <div class="newbody">
    <p id="flash">
    <%=flash[:user_error]%>
    <%flash.clear%>
    </p>
    <h1 class="newh1">Create a new post</h1>
    </br>
    </br>
    <%=form_for @post do |f|%>
    <%=f.label "Upload Image:"%><br>
    <br>
    <%=f.file_field :avatar , :id => "post_content"%><br>
    <br>
    <br>
    <br>
    <%=f.label "Caption this picture!"%><br>
    <br>
    <%=f.text_area :caption %><br>
    <br>
    <%=f.hidden_field :user_id, :value => current_user.id%><br>
    <br>
    <%=f.label "location_id"%><br>
    <%=f.text_field :location_id, :class => "newinput"%><br>
    <br>
    <%=f.label "city_id"%><br>
    <%=f.text_field :city_id, :class => "newinput"%><br>
    <br>
    <%=f.submit%>
    <%end%>
    </div>
</div>