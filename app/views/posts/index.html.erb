<div class="index">
    <%if @posts != [nil, nil]%>
        <%@posts.each do |post|%>
            <%=link_to image_tag(url_for(post.avatar)), post_path(post), :class=>"linktoimage"%>
        <%end%>
    <%else%>
        <div class="noresult" id="nosearch">There were no results for that search</div>
    <%end%>
</div>